<% if (posts.length > 0) {%>
  <h2 class="mt-2">آخرین پست ها</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>عنوان</th>
                <th>تاریخ</th>
                <th>وضعیت</th>
              </tr>
            </thead>
            <tbody>
              <% for(let post of posts){%>
              <tr>
                <td>1</td>
                <td><a href="/blogs/<%=post._id%>"><%= post.title %></a></td>
                <td><%= formatDate(post.Date) %></td>
                <td>
                  <span class="badge <%= post.status === 'public' ? 'badge-success' : 'badge-danger'%> ">
                    
                    <%= post.status === "public" ? "عمومی" : "خصوصی" %>
                    
                  </span>
                </td>
                <td>
                  <a href="/dashboard/edit-post/<%=post._id%>" class="btn btn-sm btn-primary">ویرایش</a>
                </td>
                <td>
                  <a href="/dashboard/delete-post/<%=post._id%>" class="btn btn-sm btn-danger">حذف</a>
                </td>
              </tr>
              <%}%>
            </tbody>
          </table>
        </div>
        <%- include("../includes/Pagination.ejs") -%>
  
  <% } else{ %>
    <div class="text-center" id="badgeText">
      
      <h1>
        <span class="badge badge-danger">در حال حاظر شما هیچ پستی ندارید</span>
      </h1>
        
      
    </div>
    <% } %>